<Window x:Class="Kreta.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Kreta.Console.ViewModel"
        xmlns:local="clr-namespace:Kreta.Console"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:AwardedStudentViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBlock Margin="2 2 2 2" Text="{Binding Older}"></TextBlock>
        <TextBlock Margin="2 2 2 2" Text="{Binding AwardAvarage}"></TextBlock>
        <TextBlock Margin="2 2 2 2" Text="{Binding NumberOfGender}"></TextBlock>
        <TextBlock Margin="2 2 2 2" Text="{Binding OneTimePaymentInYear}"></TextBlock>
        <TextBlock Margin="2 2 2 2" Text="{Binding AnnualScholarshipAmount}"></TextBlock>
        <TextBlock Margin="2 2 2 2" Text="{Binding ScholarshipPaidPerScoolClass}"></TextBlock>
        <TextBlock Margin="2 2 2 2" Text="{Binding AdultStudentScholarship}"></TextBlock>
        
    </StackPanel>
</Window>
